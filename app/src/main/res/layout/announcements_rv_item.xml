<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_shade_2"
        >

        <ImageView
            android:id="@+id/idIVPdficon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/admin" />

        <TextView
            android:id="@+id/idTVNotestitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@+id/idIVPdficon"
            android:layout_toEndOf="@+id/idIVPdficon"
            android:padding="4dp"
            android:singleLine="true"
            android:text="  Admin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idIVPdficon"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:singleLine="false"
            android:text="These are announcements"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/idTVPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVAnnouncement"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:singleLine="false"
            android:text="Yours truly, \nAdmin"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>